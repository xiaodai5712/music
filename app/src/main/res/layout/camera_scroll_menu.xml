<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/scroll_menu_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/photo_size"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            style="@style/scroll_menu_text_style"
            android:text="@string/photo_size" />

        <Button
            android:id="@+id/screen_ratio_1_1"
            android:text="1:1"
            style="@style/scroll_menu_text_btn_style"/>

        <Button
            android:id="@+id/screen_ratio_16_9"
            android:text="16:9"
            style="@style/scroll_menu_text_btn_style"/>


        <Button
            android:id="@+id/screen_ratio_4_3"
            android:text="4:3"
            style="@style/scroll_menu_text_btn_style"/>

        <Button
            android:id="@+id/screen_ratio_full"
            android:text="full"

            style="@style/scroll_menu_text_btn_style"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_down"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            style="@style/scroll_menu_text_style"
            android:text="@string/count_down" />

        <View
            style="@style/scroll_menu_text_iv_style"/>

        <ImageView
            android:id="@+id/count_down_close"
            style="@style/scroll_menu_text_iv_style"
            android:src="@drawable/ic_count_down_close_white"/>

        <ImageView
            android:id="@+id/count_down_3"
            style="@style/scroll_menu_text_iv_style"
            android:src="@drawable/ic_count_down_3_white"/>

        <ImageView
            android:id="@+id/count_down_5"
            style="@style/scroll_menu_text_iv_style"
            android:src="@drawable/ic_count_down_5_white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/high_pixels_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="invisible">


        <TextView
            style="@style/scroll_menu_text_style"
            android:text="4800万" />

        <Button
            style="@style/scroll_menu_text_btn_style"/>

        <Button
            android:id="@+id/off_4800"
            android:text="关闭"
            style="@style/scroll_menu_text_btn_style"/>

        <Button
            android:id="@+id/on_4800"
            android:text="开启"
            style="@style/scroll_menu_text_btn_style"/>
    </LinearLayout>

    <!--dzh?  这里为什么会有问题-->
    <View
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/gray"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>